<ion-header>
  <ion-toolbar>
    <ion-title>{{ pokemon?.name | titlecase }}</ion-title>
  </ion-toolbar>
</ion-header>

<ion-content *ngIf="pokemon">
  <ion-card>
    <img [src]="pokemon.sprites.front_default" alt="{{ pokemon.name }}" />
    <ion-card-header>
      <ion-card-title>{{ pokemon.name | titlecase }}</ion-card-title>
    </ion-card-header>

    <ion-card-content>
      <p><strong>Tipos:</strong></p>
      <ul>
        <li *ngFor="let tipo of pokemon.types">{{ tipo.type.name | titlecase }}</li>
      </ul>

      <p><strong>Habilidades:</strong></p>
      <ul>
        <li *ngFor="let hab of pokemon.abilities">{{ hab.ability.name | titlecase }}</li>
      </ul>

      <p><strong>Status:</strong></p>
      <ul>
        <li *ngFor="let stat of pokemon.stats">
          {{ stat.stat.name | titlecase }}: {{ stat.base_stat }}
        </li>
      </ul>

      <p><strong>Movimentos:</strong></p>
      <ul>
        <li *ngFor="let move of pokemon.moves | slice:0:6">
          {{ move.move.name | titlecase }}
        </li>
      </ul>
    </ion-card-content>
  </ion-card>
</ion-content>
